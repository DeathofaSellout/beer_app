      <%= f.text_field :style %>
      <%= f.label :style %>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s12">
     <%= f.text_field :brewery %>
     <%= f.label :brewery %>
   </div>
 </div>
 <div class="row">
  <div class="input-field col s12">

    <%= f.text_field :country %>
    <%= f.label :country %>
  </div>

</div>
<div class="row">
