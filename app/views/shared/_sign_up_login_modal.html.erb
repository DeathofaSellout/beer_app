<!-- Sign Up Modal -->
<div id="modal_signup" class="modal modal-fixed-footer">
  <%= form_for @user do |f| %>
  <div class="modal-content">
    <div class="row">

      <!-- <form class="col s12"> -->
      <div class="row">
        <div class="input-field col s12">
          <%= f.text_field :name%>
          <label for="name">Enter First and Last Name</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= f.text_field :email%>
          <label for="email">Email</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= f.password_field :password%>
          <label for="password">Password</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= f.text_field :birthday%>
          <label for="birthday">Birthday</label>
        </div>
      </div>
      <!-- </form> -->
    </div>
  </div>
  <div class="modal-footer">
    <a class="modal-action modal-close waves-effect waves-red btn-flat">Cancel</a>
    <%= f.submit "Save", class: "btn-flat"%>
  </div>
  <%end%>
</div>

<!-- Signup Modal End-->

<!-- Login Modal -->
<div id="modal_login" class="modal modal-fixed-footer">
  <% @user=User.new %>
  <%= form_for @user, url: '/login', method: 'get' do |f| %>
  <div class="modal-content">


    <div class="row">
      <div class="input-field col s12">
        <%= f.email_field :email, placeholder: "Email" %>
        <label for="email">Email</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%= f.password_field :password, placeholder: "Password" %>
        <label for="password">Password</label>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <a class="modal-action modal-close waves-effect waves-red btn-flat">Cancel</a>
    <%= f.submit "Login", class: "btn-flat" %>

    <!--  <a class="modal-action modal-close waves-effect waves-green btn-flat">Login</a> -->

  </div>
  <% end %>
</div>
<!-- Login Modal End-->
