<%= render "shared/nav" %>

<div class="container">
  <div class="col s12 m7">
    <h2 class="header">Top Beers</h2>
    <% @beers.each do |b| %>
    <div class="card horizontal">
      <div class="card-image">
        <%= image_tag(b.image, :class => "beer_image") %>
      </div>
      <div class="card-stacked">
        <div class="card-content">
          <h2><%= b.name%></h2>
          <h5>Brewed by: <%= b.brewery%></h5>
          <p>Style: <%= b.style%></p>
          <p><%= b.ibu%> IBUs <%= b.abv%>% ABV</p>
          <p><%= b.country%></p>
        </div>
        <div class="card-action">
          <a href="#">More Information</a>
        </div>
      </div>
    </div>
    <% end %>
  </div>

</div>
</div>
