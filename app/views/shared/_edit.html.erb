<a class="waves-effect waves-light btn modal-trigger" href="#modal3">Edit User</a>

<div id="modal3" class="modal">
  <div class="modal-content">
    <%= form_for @user, :id=>"user-form", :class=> "col s12" do |f| %>
    <div class="row">
      <div class="input-field col s12">
        <%= f.text_field :name %>
        <%= f.label :name, :class=> "active" %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
       <%= f.text_field :email %>
       <%= f.label :email, :class=> "active" %>
     </div>
   </div>
   <div class="row">
     <div class="input-field col s12">
       <%= f.text_field :password %>
       <%= f.label :password, :class=> "active" %>
     </div>
   </div>
   <div class="row">
     <div class="input-field col s12">
       <%= f.text_field :birthday %>
       <%= f.label :birthday, :class=> "active" %>
     </div>
   </div>
    <div class="modal-footer">
      <%= f.submit "submit", :class=> "btn-flat" %>
    </div>
  </div>
</div>
<% end %>
